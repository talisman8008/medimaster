const mongoose = require('mongoose');

const UserSchema = new mongoose.Schema({
    mobile: { type: String, required: true, unique: true },
    password: { type: String, required: true }, // stores hashed pass
    profiles: [
        {
            name: String,
            role: { type: String, enum: ['patient', 'receptionist', 'doctor'], default: 'patient' },
            age: Number,
            relation: String,
            status:{type:Boolean,default:false}//false=offline,true=online
        }
    ]
});
module.exports = mongoose.model('User', UserSchema);